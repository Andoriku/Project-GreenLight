@model IEnumerable<PlantScape.Models.Plants>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Add a New Plant to the Database", "Create")
</p>

<p>OR</p>

@using (Html.BeginForm("Index", "Plants", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <input type="file" name="file" />
    <input type="submit" value="OK" />
}
<br />
<table class="table">
    <tr>
        <th>
           @Html.DisplayNameFor(model => model.imageUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.botanicalName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.commonName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fColorSpring)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fColorFall)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.leafType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.flowers)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.hardinessZone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.soilType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.lightReq)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.imageUrl)" alt="No Image" style="width : 100%; height: 20%" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.botanicalName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.commonName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fColorSpring)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fColorFall)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.flowers)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.leafType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.hardinessZone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.soilType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lightReq)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id })
            </td>
        </tr>
    }

</table>
