@using PlantScape.Models
@model PlantScape.Models.ProjectViewModel
@{
    ViewBag.Title = "AddPlants";
    Layout = "~/Views/Shared/_Layout - Client.cshtml";
}

<h2>Add Plants to Project</h2>

<h3>@Html.DisplayFor(model => Model.Project.projectName)</h3>


@foreach (Plants plant in Model.Plants)
{
    <table>
        <tr>
            <td>
                <img src="@Html.DisplayFor(modelItem => plant.imageUrl)" alt="No Image" style="width : 100%; height: 20%" />
            </td>
            |
            <td>
                @Html.DisplayFor(modelItem => plant.botanicalName)
            </td>
            |
            <td>
                @Html.DisplayFor(modelItem => plant.commonName)
            </td>
            |
            <td>
                @Html.DisplayFor(modelItem => plant.type)
            </td>
            |
            <td>
                @Html.DisplayFor(modelItem => plant.fColorSpring)
            </td>
            |
            <td>
                @Html.DisplayFor(modelItem => plant.fColorFall)
            </td>
            |
            <td>
                @Html.DisplayFor(modelItem => plant.flowers)
            </td>
            |
            <td>
                @Html.DisplayFor(modelItem => plant.leafType)
            </td>
            |
            <td>
                @Html.DisplayFor(modelItem => plant.hardinessZone)
            </td>
            |
            <td>
                @Html.DisplayFor(modelItem => plant.soilType)
            </td>
            |
            <td>
                @Html.DisplayFor(modelItem => plant.lightReq)
            </td>
        </tr>
    </table>
    using (Html.BeginForm("AddPlants", "Developer", new { id = Model.Project.id }, FormMethod.Post, new { }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.Hidden("plantId", Convert.ToInt32(plant.id))

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    }
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
