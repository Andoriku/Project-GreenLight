@model IEnumerable<PlantScape.Models.Plants>

@{
    ViewBag.Title = "Browse";
    Layout = "~/Views/Shared/_Layout - Developer.cshtml";
}

<h2>Browse Plants</h2>

<p>
    @Html.ActionLink("Add a New Plant to the Database", "Create")
</p>

<p>OR</p>

@using (Html.BeginForm("Index", "Plants", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <input type="file" name="file" />
    <input type="submit" value="OK" />
}
<p>
    @Html.ActionLink("Search for specific plants", "SearchView")
</p>
<br />
<table class="table">
    <tr>
        <th>
            Image
        </th>
        <th>
            Botanical Name
        </th>
        <th>
            Common Name
        </th>
        <th>
            Type
        </th>
        <th>
            Foliage Color (Spring)
        </th>
        <th>
            Foliage Color (Fall)
        </th>
        <th>
            Flowers 
        </th>
        <th>
            Leaf Type
        </th>
        <th>
            Hardiness Zone
        </th>
        <th>
            Soil Type*
        </th>
        <th>
            Light Requirements
        </th>
        <th>
            <lable>Add To Favorites</lable>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.imageUrl)" alt="No Image" style="width : auto; height: 20%" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.botanicalName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.commonName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fColorSpring)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fColorFall)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.flowers)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.leafType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.hardinessZone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.soilType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lightReq)
            </td>
            <td>
                @Html.ActionLink("Add", "AddToFavorites", "Developer", new { id = item.id }, new { })
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Plants", new { id = item.id }, new { }) |
                @Html.ActionLink("Details", "Details", "Plants", new { id = item.id }, new { }) |
                @Html.ActionLink("Delete", "Delete", "Plants", new { id = item.id }, new { })
            </td>
        </tr>
    }

</table>
<br />
<div>
    <p>* Diffrent plants grow in diffrent soil types. Below is a list of which diffrent soil types that the selected plant will grown in. The Soil Type Keys are as follows:</p>

    <ul>
        <li>1 = Urban</li>
        <li>2 = Clay</li>
        <li>3 = Clay Loam</li>
        <li>4 = Sandy Loam</li>
        <li>5 = Silt Loam</li>
        <li>6 = Urban, Clay, Clay Loam, Sandy Loam, Silt Loam</li>
        <li>7 = Urban, Clay, Clay Loam, Sandy Loam</li>
        <li>8 = Urban, Clay, Clay Loam</li>
        <li>9 = Urban, Clay Loam, Sandy Loam, Silt Loam</li>
        <li>10 = Urban, Clay Loam, Sandy Loam</li>
        <li>11 = Urban, Sandy Loam, Silt Loam</li>
        <li>12 = Sandy</li>
        <li>13 = Urban, Clay, Clay Loam, Sandy Loam, Sandy, Silt Loam</li>
        <li>14 = Clay, Clay Loam, Sandy Loam, Sandy, Silt Loam</li>
        <li>15 = Clay Loam, Sandy Loam, Sandy, Silt Loam</li>
        <li>16 = Sandy Loam, Sandy, Silt Loam</li>
        <li>17 = Sandy, Silt Loam</li>
        <li>18 = Sandy, Sandy Loam</li>
        <li>19 = Clay Loam, Sandy Loam, Silt Loam</li>
        <li>20 = Clay, Clay Loam, Sandy Loam, Silt Loam</li>

    </ul>
</div>

