@model PlantScape.Models.Plants

@{
    ViewBag.Title = "AddToFavorites";
    Layout = "~/Views/Shared/_Layout - Developer.cshtml";
}

<h2>Confirm Favorite</h2>

<table class="table">
    <tr>
        <th>
            Image
        </th>
        <th>
            Botanical Name
        </th>
        <th>
            Common Name
        </th>
        <th>
            Type
        </th>
        <th>
            Foliage Color (Spring)
        </th>
        <th>
            Foliage Color (Fall)
        </th>
        <th>
            Leaf Type
        </th>
        <th>
            Flowers
        </th>
        <th>
            Hardiness Zone*
        </th>
        <th>
            Soil Type
        </th>
        <th>
            Light Requirements
        </th>
        <th></th>
    </tr>
        <tr>
            <td>
                <img src="@Model.imageUrl" alt="No Image" style="width : 100%; height: 20%" />
            </td>
            <td>
                @Model.botanicalName
            </td>
            <td>
                @Model.commonName
            </td>
            <td>
                @Model.type
            </td>
            <td>
                @Model.fColorSpring
            </td>
            <td>
                @Model.fColorFall
            </td>
            <td>
                @Model.flowers
            </td>
            <td>
                @Model.leafType
            </td>
            <td>
                @Model.hardinessZone
            </td>
            <td>
                @Model.soilType
            </td>
            <td>
                @Model.lightReq
            </td>
        </tr>
</table>
@using (Html.BeginForm("AddToFavorites", "Developer"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="form-group">
                @Html.Hidden(@Html.DisplayNameFor(model => model.id).ToString(), Model.id)
            </div>
        </div>

        <p>Do you wish to add </p>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Browse","Developer",new { },new {})
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
