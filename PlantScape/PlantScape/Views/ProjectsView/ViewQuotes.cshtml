@using PlantScape.Models
@model IEnumerable<PlantScape.Models.ProjectsViewModel>

@{
    ViewBag.Title = "ViewQuotes";
    Layout = "~/Views/Shared/_Layout - Client.cshtml";
}

<h2>ViewQuote</h2>

<table class="table">
    <tr>
        <th>
          <label>Project Name</label>
        </th>
        <th>
          <lable>Your Design Drawing</lable>
        </th> 
        <th></th>
    </tr>

    @foreach (var model in Model)
    {
        foreach (var project in model.Projects)
        { 
        <tr>
            <td>
                @Html.DisplayFor(modelItem => project.projectName)
            </td>
            <td>
                <img src="@Html.DisplayFor(modelItem => project.displayImage)" alt="No Image" style="width : auto; max-height: " />
            </td>
            <td>
            <table class="table">
    @foreach (var plant in project.plantList)
    {

        <tr>
            <td>
                <img src="@Html.DisplayFor(modelItem => plant.imageUrl)" alt="No Image" style="width : 100%; height: 100%" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => plant.botanicalName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => plant.commonName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => plant.type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => plant.fColorSpring)
            </td>
            <td>
                @Html.DisplayFor(modelItem => plant.fColorFall)
            </td>
            <td>
                @Html.DisplayFor(modelItem => plant.flowers)
            </td>
            <td>
                @Html.DisplayFor(modelItem => plant.leafType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => plant.hardinessZone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => plant.soilType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => plant.lightReq)
            </td>
        </tr>
    }
</table>
