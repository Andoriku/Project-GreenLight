@model PlantScape.Models.ProjectsViewModel

@{
    ViewBag.Title = "ViewQuotes";
    Layout = "~/Views/Shared/_Layout - Client.cshtml";
}

<h2>ViewQuote</h2>

<table class="table">
    <tr>
        <th>
          <label>Project Name</label>
        </th>
        <th>
          <lable>Your Design Drawing</lable>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Projects)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.projectName)
            </td>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.displayImage)" alt="No Image" style="width : 20%; height: 20%" />
            </td>
</tr>
    }
    </table>